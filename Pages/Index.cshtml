@page
@model IndexModel
@{
    ViewData["Title"] = "Joueur";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
</head>

<body class="bg-dark text-light">
    <nav class="navbar navbar-expand-sm bg-primary navbar-dark fixed-top">
        <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <form class="form-inline nav-link" action="/action_page.php">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">@("@")</span>
                            </div>
                            <input type="text" id="userNameDisplay" class="form-control" placeholder="Pseudo" readonly>
                        </div>
                    </form>
                </li>
            </ul>
        </div>
        <div class="mx-auto order-0">
            <h3>SUPER QUIZZ</h3>
        </div>
        <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item fixed-right">
                    <input type="button" value="Modal" id="host_button" class="btn btn-secondary" onclick="display();">
                </li>
            </ul>
        </div>

    </nav>

    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h4 class="modal-title text-dark">Connection au jeu</h4>
                </div>

                <div class="modal-body">
                    <ul>
                        <li>
                            <form>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">Pseudo</span>
                                    </div>
                                    <input type="text" id="userName" class="form-control" placeholder="Pseudo...">
                                    <div class="input-group-append">
                                        <input type="button" value="Jouer" id="player_button" class="btn btn-secondary" onclick="setPlayer();" data-dismiss="modal">
                                    </div>
                                </div>
                            </form>
                        </li>
                        <li>
                            <input type="button" value="Devenir Hôte" id="host_button" class="btn btn-secondary" onclick="setHost();" data-dismiss="modal">
                        </li>
                    </ul>
                </div>

            </div>
        </div>
    </div>

    <div class="container-md p-5"></div>
    <div class="tab-content">
        <div id="player_tab" class="container-md p-4 my-3 border">
            <h1>Question</h1>
            <div class="panel-body">
                <ul id="questionList" class="chat">
                </ul>
            </div>
        </div>
        <div id="host_tab" class="container-md p-4 my-3 border" style="display: none;">
            <h1>Mode Hôte</h1>
            <div class="panel-body">
                <ul id="anwserList" class="chat">
                </ul>
                <h4>Liste des Joueurs :</h4>
                <ul id="playerList" class="chat">
                </ul>
            </div>
        </div>
    </div>
    <div class="container-md p-5"></div>

    <div id="player_anwser" class="container fixed-bottom bg-dark pt-3">
        <div class="input-group mb-3">
            <input type="text" id="userAnwser" class="form-control" placeholder="Réponse...">
            <div class="input-group-append">
                <input type="button" value="Envoyer" id="sendAnwser" class="btn btn-primary btn-sm">
            </div>
        </div>
    </div>

    <div id="host_question" class="container fixed-bottom bg-dark pt-3" style="display: none;">
        <div class="input-group mb-3">
            <input type="text" id="userQuestion" class="form-control" placeholder="Question...">
            <div class="input-group-append">
                <input type="button" value="Envoyer" id="sendQuestion" class="btn btn-primary btn-sm">
            </div>
        </div>
    </div>

</body>

<script src="~/lib/signalr/signalr.js"></script>


